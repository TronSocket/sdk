{
    "name": "@tronsocket/sdk",
    "version": "0.1.3",
    "type": "module",
    "main": "dist/main.es.js",
    "module": "dist/main.es.js",
    "unpkg": "dist/main.umd.js",
    "browser": "dist/main.umd.js",
    "jsdelivr": "dist/main.umd.js",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": {
            "import": {
                "default": "./dist/main.es.js"
            },
            "require": {
                "default": "./dist/main.js"
            }
        },
        "./node": {
            "default": "./dist/main.js"
        },
        "./browser": {
            "default": "./dist/main.es.js"
        }
    },
    "files": [
        "dist",
        "README.md",
        "!tsconfig.tsbuildinfo"
    ],
    "scripts": {
        "build:cjs": "tsc",
        "test": "vitest run",
        "lint": "eslint ./src --fix",
        "build:bundle": "vite build",
        "format": "prettier --write .",
        "prepublishOnly": "npm run build",
        "build": "npm run build:bundle && npm run build:cjs"
    },
    "devDependencies": {
        "@beycandeveloper/tron-tx-decoder": "^2.0.7",
        "@eslint/js": "^9.12.0",
        "@multiplechain/utils": "^0.1.23",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.10.0",
        "prettier": "^3.3.3",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.8.0",
        "vite": "^5.4.8",
        "vite-plugin-node-polyfills": "^0.22.0",
        "vitest": "^2.1.2"
    },
    "dependencies": {
        "@tronsocket/types": "^0.2.0",
        "socket.io-client": "^4.8.0"
    }
}