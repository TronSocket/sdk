{
    "compilerOptions": {
        "strict": true,
        "target": "es2015",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declarationDir": "./dist",
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests/*.test.ts"]
}
